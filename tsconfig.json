{
    "compileOnSave":  true,
    "compilerOptions": {
      "module": "es2022",
      "target": "es2017",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "dist",
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": true,
      "moduleResolution": "node12",
    },
    "include": ["src/**/**/*"],
    "exclude": ["node_modules"]
  }